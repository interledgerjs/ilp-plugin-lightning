{
  "name": "ilp-settlement-lightning",
  "bin": {
    "ilp-settlement-lightning": "./bin/run.js"
  },
  "version": "1.0.0-beta.25",
  "description": "Settle Interledger payments using the Lightning Network",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist/**/*",
    "!dist/**/*.test.js",
    "generated/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "run-s generate:*",
    "generate:dir": "make-dir generated",
    "generate:js": "pbjs -t static-module -w commonjs -o generated/rpc.js src/proto/rpc.proto",
    "generate:ts": "pbts -o generated/rpc.d.ts generated/rpc.js",
    "generate:fix": "node generate.js",
    "test": "jest --forceExit",
    "lint": "tslint --fix --project .",
    "fix": "run-s format lint",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/settlement-lightning.git"
  },
  "bugs": {
    "url": "https://github.com/interledgerjs/settlement-lightning/issues"
  },
  "keywords": [
    "interledger",
    "ilp",
    "streaming",
    "payments",
    "lightning",
    "lightning-network",
    "micropayments"
  ],
  "author": "Kincaid O'Neil (https://kincaidoneil.com/)",
  "license": "Apache-2.0",
  "dependencies": {
    "@grpc/grpc-js": "^0.5.2",
    "@types/long": "^4.0.0",
    "bignumber.js": "^9.0.0",
    "debug": "^4.1.1",
    "ilp-settlement-core": "^0.1.1",
    "protobufjs": "github:trackforce/protobuf.js#86f968acd6b9b1489059f08e48c9469ba8d4fba1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/get-port": "^4.2.0",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.2",
    "get-port": "^5.0.0",
    "jest": "^24.9.0",
    "make-dir-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
